{
  "name": "data-to-code-toolbox",
  "author": "Alexandru Badita",
  "version": "1.0.0",
  "description": "Data2Code toolbox launcher updater",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "build:start": "npm install && electron .",
    "pack": "build --dir",
    "dist": "electron-builder build",
    "prettier": "npx prettier --write ."
  },
  "license": "ISC",
  "build": {
    "appId": "data-to-code-toolbox",
    "productName": "Data2CodeToolbox",
    "copyright": "Copyright Â© 2020",
    "buildVersion": "1.0.1",
    "compression": "maximum",
    "directories": {
      "buildResources": "resources",
      "output": "C:\\_electron-dist\\tool-box"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "favicon.ico",
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "snap",
        "AppImage"
      ],
      "category": "Development"
    },
    "extraFiles": [
      "config.json",
      "download"
    ]
  },
  "dependencies": {
    "axios": "^0.21.1",
    "electron-is-dev": "^2.0.0",
    "extract-zip": "^1.7.0",
    "fs-extra": "^9.1.0",
    "shelljs": "^0.8.4",
    "util.promisify": "^1.1.1"
  },
  "devDependencies": {
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "prettier": "2.2.1"
  }
}
